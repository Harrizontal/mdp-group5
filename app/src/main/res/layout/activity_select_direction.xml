<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/text_coordinate"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@null"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_coordinate"/>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_west"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="West"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/text_coordinate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_north"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_north"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="North"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/text_coordinate"
            app:layout_constraintLeft_toRightOf="@id/button_west"
            app:layout_constraintRight_toLeftOf="@id/button_south"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_south"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="South"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/text_coordinate"
            app:layout_constraintLeft_toRightOf="@id/button_north"
            app:layout_constraintRight_toLeftOf="@id/button_east"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/button_east"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="East"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/text_coordinate"
            app:layout_constraintLeft_toRightOf="@id/button_south"
            app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>